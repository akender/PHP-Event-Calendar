<html>
<head>
<title>PHP Calendar testpage</title>
<link type="text/css" rel="stylesheet" href="phpcalendar/css/days.css">
<script type="text/javascript" language="JavaScript1.2">
function main() {
	var today = new Date();
	var h = today.getHours();
	var m = today.getMinutes();
	
	var TotalMin = 60 * 24;
	var TotalMinNow = 60 * h + m;

	var Suhe = TotalMinNow / TotalMin;
	var TabelHeight = document.getElementById('body_days').clientHeight;
	var Asukoht = Math.round(Suhe * TabelHeight);
	document.getElementById('timeline').style.top = document.getElementById('body_days').offsetTop + Asukoht - 8;
	document.getElementById('timeline').style.left = document.getElementById('body_days').offsetLeft;
	document.getElementById('ta').innerHTML = document.getElementById('table_days').offsetTop + " / " + 
	document.getElementById('body_days').clientHeight;
	document.getElementById('ti').innerHTML = document.getElementById('timeline').offsetTop + " / " + 
	Asukoht;

	t = setTimeout('main()', 100);
}
function test() {
	var today = new Date();
	document.title = today.toTimeString();
	t = setTimeout('test()', 100);
}
</script>
</head>
<body onload="main()">
<hr id="timeline" style="z-index: 1; position: absolute; top: -10px; left: 0; width: 100%; background-color: red; height: 1px; border: 0;" />
